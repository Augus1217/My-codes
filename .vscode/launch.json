{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(g++) 建置及執行", // 這裡的名稱可以自己取
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false, // false 會在 VS Code 內建的終端機執行
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe", // 確認這個路徑和你的 gdb.exe 路徑一樣
            "setupCommands": [
                {
                    "description": "為 gdb 啟用 pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file" // 這是最關鍵的一行！
        }
    ]
}